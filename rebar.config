%% -*- mode: erlang -*-
%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

{deps, [
    {proper, ".*", {git, "git://github.com/manopapad/proper.git", "master" }}
] }.

{use_edown,     true}.
{cover_enabled, true}.
{erl_opts,      [ warn_unused_vars,    warn_exported_vars, warn_shadow_vars,    warn_bif_clash,      
                  warn_unused_record,  warnings_as_errors, warn_untyped_record, warn_deprecated_function,
                  warn_obsolete_guard, strict_validation,  warn_export_vars ]}.
{edoc_opts,     [{todo, true}]}.



                  